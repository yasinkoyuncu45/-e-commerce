@model User

@{
	ViewData["Title"] = "UserEdit";
	Layout = "~/Views/Shared/AdminLayout.cshtml";

}


<!-- BEGIN SAMPLE FORM PORTLET-->
<div class="portlet box purple ">
	<div class="portlet-title">
		<div class="caption">
			<i class="fa fa-gift"></i> Kullanıcı Düzeltme Formu
		</div>
		<div class="tools">
			<a href="" class="collapse">
			</a>
			<a href="#portlet-config" data-toggle="modal" class="config">
			</a>
			<a href="" class="reload">
			</a>
			<a href="" class="remove">
			</a>
		</div>
	</div>
	<div class="portlet-body form">
		<form class="form-horizontal" role="form" method="post" action="/Admin/UserEdit">

			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-body">

				<div class="form-group">
					<label asp-for="NameSurname" class="col-md-3 control-label">Adı Soyadı</label>
					<div class="col-md-9">
						<input asp-for="NameSurname" class="form-control input-lg" placeholder="Ad Soyad"
							   required maxlength="100" />
						<span asp-validation-for="NameSurname" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<label asp-for="Email" class="col-md-3 control-label">Email</label>
					<div class="col-md-9">
						<input asp-for="Email" class="form-control input-lg" placeholder="Email"
							   required maxlength="100" />
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>
				</div>
				<div style="display:none;" class="form-group">
					<label asp-for="Password" class="col-md-3 control-label">Şifre</label>
					<div class="col-md-9">
						<input asp-for="Password" class="form-control input-lg" placeholder="Şifre"
							   required maxlength="100" />
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<label asp-for="Telephone" class="col-md-3 control-label">Telefon No</label>
					<div class="col-md-9">
						<input asp-for="Telephone" class="form-control input-lg" placeholder="Telefon No"
							   required maxlength="100" />
						<span asp-validation-for="Telephone" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<label asp-for="InvoicesAddress" class="col-md-3 control-label">Adres</label>
					<div class="col-md-9">
						<input asp-for="InvoicesAddress" class="form-control input-lg" placeholder="Adres"
							   required maxlength="100" />
						<span asp-validation-for="InvoicesAddress" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<label asp-for="IsAdmin" class="col-md-3 control-label">Admin</label>
					<div class="col-md-9">
						<input asp-for="IsAdmin" class="form-control input-lg" placeholder="Admin"
							    maxlength="100" />
						<span asp-validation-for="IsAdmin" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<label class="col-md-3 control-label">AKTİF Mİ?</label>
					<div class="col-md-9">
						<input asp-for="Active" class="form-control input-lg" />
					</div>
				</div>

				<input type="hidden" asp-for="UserID" />

				<div class="form-action rights1">
					<a asp-action="UserSettings" class="btn btn-primary">KULLANICI LİSTESİ</a>
					<div class="col-md-9">
						<input type="submit" name="name" value="KAYDET" class="btn btn-success" />
					</div>
				</div>



			</div>
		</form>









	</div>
</div>
<!-- END SAMPLE FORM PORTLET-->
