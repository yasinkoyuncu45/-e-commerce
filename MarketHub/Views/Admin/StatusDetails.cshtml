@model Status

@{
	ViewData["Title"] = "StatusDetails";
	Layout = "~/Views/Shared/AdminLayout.cshtml";


}
<!-- BEGIN PAGE CONTENT-->
<div class="row">
	<div class="col-md-2"> </div>
	<div class="col-md-8">
		<!-- BEGIN SAMPLE TABLE PORTLET-->
		<div class="portlet box green">
			<div class="portlet-title">
				<div class="caption">
					<i class="fa fa-cogs"></i>
					<span style="background:red;color:white;">
						@Html.DisplayFor(Model => @Model.StatusName)Statüsüne ait

						<span style="font-size:30px;background-color:slategrey;">
							@ViewBag.StatusCount
						</span>
						ADET ÜRÜN VARDIR.

				</div>

				<div class="tools">
					<a href="javascript:;" class="collapse">
					</a>
					<a href="#portlet-config" data-toggle="modal" class="config">
					</a>
					<a href="javascript:;" class="reload">
					</a>
					<a href="javascript:;" class="remove">
					</a>
				</div>
			</div>
			<div class="portlet-body flip-scroll">
				<table class="table table-bordered table-striped table-condensed flip-content">
					<thead class="flip-content">
						<tr>
							<th width="20%">
								@Html.DisplayNameFor(model => model.StatusName)
							</th>
							<td>
								@Html.DisplayFor(model => model.StatusName)
							</td>
						</tr>

						<tr>
							<th width="20%">
								@Html.DisplayNameFor(model => model.Active)
							</th>
							<td>
								@Html.DisplayFor(model => model.Active)
							</td>
						</tr>
					</thead>
				</table>
				<a asp-action="StatusIndex" class="btn btn-primary ">STATÜ LİSTESİ</a>
			</div>
		</div>
