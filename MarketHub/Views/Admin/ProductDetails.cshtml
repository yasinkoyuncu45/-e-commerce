@model Product

@{
	ViewData["Title"] = "ProductDetails";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
	Context con = new Context();
	string CategoryName = "";
	string BrandName = "";
	string StatusName = "";

}
<!-- BEGIN PAGE CONTENT-->
<div class="row">
	<div class="col-md-2"> </div>
	<div class="col-md-8">
		<!-- BEGIN SAMPLE TABLE PORTLET-->
		<div class="portlet box green">
			<div class="portlet-title">
				<div class="caption">
					<i class="fa fa-cogs"></i><span style="background:red;color:white;">
						@Html.DisplayFor(Model => @Model.ProductName)

					</span> Ürün Bilgileri

				</div>
				<div class="tools">
					<a href="javascript:;" class="collapse">
					</a>
					<a href="#portlet-config" data-toggle="modal" class="config">
					</a>
					<a href="javascript:;" class="reload">
					</a>
					<a href="javascript:;" class="remove">
					</a>
				</div>
			</div>
			<div class="portlet-body flip-scroll">
				<table class="table table-bordered table-striped table-condensed flip-content">
					<thead class="flip-content">
						<tr>
							<th width="20%">
								@Html.DisplayNameFor(model => model.ProductID)
							</th>
							<td>
								@Html.DisplayFor(model => model.ProductID)
							</td>
						</tr>
						<tr>
							<th width="20%">Ürün Adı</th>

							<td>
								@Html.DisplayFor(model => model.ProductName)
							</td>
						</tr>

						<tr>
							<th width="20%">Fiyat</th>

							<td>
								@Html.DisplayFor(model => model.UnitPrice)
							</td>
						</tr>
						<tr>
							<th width="20%">
								@Html.DisplayNameFor(model => model.CategoryID)
							</th>
							<td>
								@{
									var categoryName = con.Category
									.FirstOrDefault(c => c.CategoryID == Model.CategoryID)?.CategoryName;

								}
								<p> @categoryName</p>

							</td>
						</tr>
						<tr>
							<th width="20%">
								@Html.DisplayNameFor(model => model.SupplierID)
							</th>
							<td>
								@{
									var brandname = con.Supplier
									.FirstOrDefault(s => s.SupplierID == Model.SupplierID)?.BrandName;

								}
								<p> @brandname</p>
							</td>
						</tr>
						<tr>
							<th width="20%">
								@Html.DisplayNameFor(model => model.StatusID)
							</th>
							<td>
								@{
									var statusName = con.Status
									.FirstOrDefault(st => st.StatusID == Model.StatusID)?.StatusName;

								}
								<p> @statusName</p>
							</td>
						</tr>
						<tr>
							<th width="20%">
								@Html.DisplayNameFor(model => model.Stock)
							</th>
							<td>
								@Html.DisplayFor(model => model.Stock)
							</td>
						</tr>
						<tr>
							<th width="20%">
								@Html.DisplayNameFor(model => model.Discount)
							</th>
							<td>
								@Html.DisplayFor(model => model.Discount)
							</td>
						</tr>
						<tr>
							<th width="20%">Tarih</th>

							<td>
								@Html.DisplayFor(model => model.AddDate)
							</td>
						</tr>
						<tr>
							<th width="20%">
								@Html.DisplayNameFor(model => model.Keywords)
							</th>
							<td>
								@Html.DisplayFor(model => model.Keywords)
							</td>
						</tr>
						<tr>
							<th width="20%">
								@Html.DisplayNameFor(model => model.Kdv)
							</th>
							<td>
								@Html.DisplayFor(model => model.Kdv)
							</td>
						</tr>
						<tr>
							<th width="20%">TIKLANMA</th>

							<td>
								@Html.DisplayFor(model => model.HighLighted)
							</td>
						</tr>
						<tr>
							<th width="20%">En Çok Satan</th>

							<td>
								@Html.DisplayFor(model => model.TopSeller)
							</td>
						</tr>
						<tr>
							<th width="20%">
								@Html.DisplayNameFor(model => model.Related)
							</th>
							<td>
								@Html.DisplayFor(model => model.Related)
							</td>
						</tr>
						<tr>
							<th width="20%">
								@Html.DisplayNameFor(model => model.Notes)
							</th>
							<td>
								@Html.DisplayFor(model => model.Notes)
							</td>
						</tr>

						<tr>
							<th width="20%">Resim</th>

							<td>
								<img src="~/resimler/@Model?.PhotoPath" height="35" width="60" />
							</td>
						</tr>
						<tr>
							<th width="20%">
								@Html.DisplayNameFor(model => model.Active)
							</th>
							<td>
								@(Model.Active ? "Aktif" : "Pasif")
							</td>
						</tr>
					</thead>
				</table>
				<a asp-action="ProductIndex" class="btn btn-primary ">ÜRÜN LİSTESİ</a>
			</div>
		</div>
