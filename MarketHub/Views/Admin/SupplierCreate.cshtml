@model Supplier

@{
	ViewData["Title"] = "SupplierCreate";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<!-- BEGIN SAMPLE FORM PORTLET-->
<div class="portlet box purple ">
	<div class="portlet-title">
		<div class="caption">
			<i class="fa fa-gift"></i> MARKA GİRİŞ FORMU
		</div>
		<div class="tools">
			<a href="" class="collapse">
			</a>
			<a href="#portlet-config" data-toggle="modal" class="config">
			</a>
			<a href="" class="reload">
			</a>
			<a href="" class="remove">
			</a>
		</div>
	</div>
	<div class="portlet-body form">
		<form class="form-horizontal" role="form" method="post" action="/Admin/SupplierCreate">
			<div class="form-body">

				<div class="form-group">
					<label class="col-md-3 control-label" asp-for="BrandName"></label>
					<div class="col-md-9">
						<input type="text" class="form-control input-lg" placeholder="Marka Adını Buraya Yazınız"
							   asp-for="BrandName">
						<span asp-validation-for="BrandName" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<label class="col-md-3 control-label">Resim Seç</label>
					<div class="col-md-9">
						<input type="file" asp-for="PhotoPath" class="form-control input-lg" />
						<span asp-validation-for="PhotoPath" class="text-danger"></span>
					</div>
				</div>

				<div class="form-group">
					<label class="col-md-3 control-label">Aktif Mi?</label>
					<div class="col-md-9">
						<input asp-for="Active" class="form-control input-lg" />
						<span asp-validation-for="Active" class="text-danger"></span>
					</div>
				</div>



			</div>
			<div class="form-actions right1">
				<a asp-action="SupplierIndex" class="btn btn-primary">MARKA LİSTESİ</a>
				<input type="submit" name="name" value="KAYDET" class="btn btn-success" />

			</div>
		</form>
	</div>
</div>
<!-- END SAMPLE FORM PORTLET-->
