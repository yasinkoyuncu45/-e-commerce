@model Status

@{
	ViewData["Title"] = "StatusCreate";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<!-- BEGIN SAMPLE FORM PORTLET-->
<div class="portlet box purple ">
	<div class="portlet-title">
		<div class="caption">
			<i class="fa fa-gift"></i> STATÜ GİRİŞ FORMU
		</div>
		<div class="tools">
			<a href="" class="collapse">
			</a>
			<a href="#portlet-config" data-toggle="modal" class="config">
			</a>
			<a href="" class="reload">
			</a>
			<a href="" class="remove">
			</a>
		</div>
	</div>
	<div class="portlet-body form">
		<form class="form-horizontal" role="form" method="post" action="/Admin/StatusCreate">
			<div class="form-body">

				<div class="form-group">
					<label class="col-md-3 control-label" asp-for="StatusName"></label>
					<div class="col-md-9">
						<input type="text" class="form-control input-lg" placeholder="Statü Adını Buraya Yazınız"
							   asp-for="StatusName">
						<span asp-validation-for="StatusName" class="text-danger"></span>
					</div>
				</div>

			</div>

			<div class="form-group">
				<label class="col-md-3 control-label">Aktif Mi?</label>
				<div class="col-md-9">
					<input asp-for="Active" class="form-control input-lg" />
					<span asp-validation-for="Active" class="text-danger"></span>
				</div>

				<div class="form-actions right1">
					<a asp-action="StatusIndex" class="btn btn-primary">STATÜ LİSTESİ</a>
					<input type="submit" name="name" value="KAYDET" class="btn btn-success" />

				</div>
		</form>
	</div>
</div>
<!-- END SAMPLE FORM PORTLET-->
