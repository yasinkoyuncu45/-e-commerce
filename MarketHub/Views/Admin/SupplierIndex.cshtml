@model IEnumerable<Supplier>

@{
	ViewData["Title"] = "SupplierIndex";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="row">
	<div class="col-md-2 col-xs-12 col-sm-12 col-lg-2"></div>

	<div class="col-md-8 col-xs-12 col-sm-12 col-lg-8">
		<p>
			<a asp-action="SupplierCreate" asp-controller="Admin" class="btn btn-success">YENİ MARKA</a>

			@* <a href="/Admin/CategoryCreate" class="btn btn-success">YENİ KATEGORİ</a> *@
		</p>

		<!-- BEGIN SAMPLE TABLE PORTLET-->
		<div class="portlet box red">
			<div class="portlet-title">
				<div class="caption">
					<i class="fa fa-cogs"></i>MARKA	 LİSTESİ
				</div>
				<div class="tools">
					<a href="javascript:;" class="collapse">
					</a>
					<a href="#portlet-config" data-toggle="modal" class="config">
					</a>
					<a href="javascript:;" class="reload">
					</a>
					<a href="javascript:;" class="remove">
					</a>
				</div>
			</div>
			<div class="portlet-body">
				<div class="table-scrollable">
					<table class="table table-hover">
						<thead>
							<tr style="background-color:grey;color:white">
								<th>
									@Html.DisplayNameFor(model => model.SupplierID)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.BrandName)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.PhotoPath)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Active)
								</th>

								<th></th>


							</tr>
						</thead>
						<tbody>

							@foreach (var item in Model)
							{
								<tr>
									<td>
										@Html.DisplayFor(model => item.SupplierID)
									</td>
									<td>
										<span style="background-color:black;color:white;font-size:20px;">
											@Html.DisplayFor(model => item.BrandName)
										</span>

									</td>
									<td>
										<img src="~/resimler/@item.PhotoPath" height="35" width="60" />

									</td>
									@if (item.Active)
									{
										<td style="background-color:green;color:white;">
											<label>AKTİF</label>
										</td>
									}
									else
									{
										<td style="background-color:red;color:white;">
											<label>PASİF</label>
										</td>
									}

									<td>
										<a asp-action="SupplierEdit" asp-route-id="@item.SupplierID"
										   class="btn btn-primary">DÜZELT</a>
										<a asp-action="SupplierDetails" asp-route-id="@item.SupplierID"
										   class="btn btn-info">DETAY</a>
										<a asp-action="SupplierDelete" asp-route-id="@item.SupplierID"
										   class="btn btn-danger">SİL</a>
									</td>

								</tr>



							}


						</tbody>
					</table>
				</div>
			</div>
		</div>
		<!-- END SAMPLE TABLE PORTLET-->
	</div>

</div>