@model Communication

@{
	ViewData["Title"] = "CommunicationSettings";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<!-- BEGIN SAMPLE FORM PORTLET-->
<div class="portlet box purple ">
	<div class="portlet-title">
		<div class="caption">
			<i class="fa fa-gift"></i> İletişim Bilgileri Güncelleme Formu
		</div>
		<div class="tools">
			<a href="" class="collapse">
			</a>
			<a href="#portlet-config" data-toggle="modal" class="config">
			</a>
			<a href="" class="reload">
			</a>
			<a href="" class="remove">
			</a>
		</div>
	</div>
	<div class="portlet-body form">
		<form class="form-horizontal" role="form" method="post" action="/Admin/CommunicationSettings">
			<div class="form-body">

				<div class="form-group">
					<label class="col-md-3 control-label" asp-for="Adress"></label>
					<div class="col-md-9">
						<input type="text" class="form-control input-lg" placeholder="Adres Yazınız"
							   asp-for="Adress">
						<span asp-validation-for="Adress" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<label class="col-md-3 control-label" asp-for="Email"></label>
					<div class="col-md-9">
						<input type="text" class="form-control input-lg" placeholder="Email Yazınız"
							   asp-for="Email">
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<label class="col-md-3 control-label" asp-for="Telephone"></label>
					<div class="col-md-9">
						<input type="text" class="form-control input-lg" placeholder="Telefon No Yazınız"
							   asp-for="Telephone">
						<span asp-validation-for="Telephone" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<label class="col-md-3 control-label" asp-for="WorkingHours"></label>
					<div class="col-md-9">
						<input type="text" class="form-control input-lg" placeholder="Çalışma Saatlerini Yazınız"
							   asp-for="WorkingHours">
						<span asp-validation-for="WorkingHours" class="text-danger"></span>
					</div>
				</div>

			</div>



			<div class="form-actions right1">
				<input type="hidden" asp-for="ID" />
				<input type="submit" name="name" value="KAYDET" class="btn btn-success" />

			</div>
		</form>
	</div>
</div>
<!-- END SAMPLE FORM PORTLET-->