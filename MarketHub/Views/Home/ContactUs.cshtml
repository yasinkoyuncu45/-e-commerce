@using MarketHup.Models.MVVM
@model Communication
@{
    ViewData["Title"] = "ContactUs";
    Layout = "~/Views/Shared/DefaultLayout.cshtml";
}

<!-- map bannar area Start  -->
<div class="map-area">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12">
                <div id="googleMap" style="width:100%;height:433px;"></div>
                <div class="map-info-area">
                    <h3>
                        BİZE ULAŞIN
                    </h3>
                    <p></p>
                    <div class="clear"></div>
                    <div class="row">
                      
                        <div class="col-sm-12 col-md-6 col-lg-6">
                            <div class="c-right-area">
                                <h6 class="sppb-addon-title">Bilgiler</h6>
                                <div class="sppb-addon-content">
                                    <p><span><em class="fa fa-map-marker"></em></span> @Model.Adress</p>
                                    <p><span><em class="fa fa-envelope"></em></span>@Model.Email</p>
                                    <p><span><em class="fa fa-phone"></em></span> @Model.Telephone</p>
                                </div>
                            </div>
                            <div class="c-right-area r-next">
                                <h6 class="sppb-addon-title">ÇALIŞMA SAATLERİ </h6>
                                <p>@Model.WorkingHours</p>
                                <div class="single-icons">
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- map bannar area End  -->
