@model MainPageModel

@{
    ViewData["Title"] = "DiscountedProducts";
    Layout = "~/Views/Shared/DefaultLayout.cshtml";
}

<div class="shop-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-12 col-lg-12">
                <div class="clear"></div>
                <div class="row">
                    <div class="clear"></div>
                    <div class="col-sm-12 col-md-12 col-lg-12">
                        <div class="rp-area">
                            <div class="singl-shop ">
                                <div class="row">
                                    <div id="products">
                                        @foreach (var item in Model.DiscountedProducts)
                                        {

                                            <div class="col-sm-6 col-md-3 col-lg-3">
                                                <div class="sp-single">
                                                    <div class="sp-img-area">
                                                        <img class="first-img" src="~/resimler/@item.PhotoPath" alt="" style="height:220px;" />
                                                        <img class="hover-img" src="resimler/@item.PhotoPath" alt="" />
                                                        <div class="quick-view-detail">
                                                            <a href="/Home/Details/@item.ProductID">DETAYLAR</a>
                                                        </div>
                                                        <div class="sp-label-pro sp-label-pro-hot">İndirimli!</div>
                                                    </div>
                                                    <div class="sp-info-area">
                                                        <h2 class="product-name"><a title="@item.Notes" href="/Home/Details/@item.ProductID">@item.ProductName </a></h2>
                                                        <p class="all-prices">
                                                            <span class="sp-price main-price">@item.UnitPrice TL</span>
                                                        </p>
                                                        <div class="sp-button">
                                                            <div class="s-button">
                                                                <a href="/Home/CartProcess/@item.ProductID" data-toggle="tooltip"
                                                                   data-placement="top" title="Sepete Ekle"
                                                                   class="black-tooltip add-to-cart all_src_icon">
                                                                    <i class="fa fa-shopping-cart"></i>
                                                                </a>

                                                            </div>
                                                            <div class="s-button">
                                                                <a href="index.html#" data-toggle="tooltip"
                                                                   data-placement="top"
                                                                   class="black-tooltip add-to-cart all_src_icon">  </a>
                                                            </div>
                                                            <div class="s-button last-b ">
                                                                <a href="/Home/Details/@item.ProductID" data-toggle="tooltip"
                                                                   data-placement="top" title="Detaylar"
                                                                   class="black-tooltip add-to-cart all_src_icon">
                                                                    <i class="fa fa-eye"></i>
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        }


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <input type="hidden" id="pagenumber" value="0" />
                    <input type="hidden" id="scrollheight" value="0" />

                </div>
            </div>
        </div>

    </div>
</div>
@section scripts {

    <script>

        $(document).ready(function () {

            $(window).scroll(function () {

                if($(window).scrollTop()-parseInt($("#scrollheight").val())==200){

                    var pagenumber = parseInt($("#pagenumber").val())
                    var nextpage = pagenumber + 1;

                    $.ajax({
                        type: "GET",
                        url: "/Home/_PartialDiscountedProducts",
                        data: { pageno: nextpage },
                        async: true,
                        processData: true,
                        cache: true,
                        success: function (result) {
                            $("#products").append(result);
                            $("#pagenumber").val(nextpage);
                            $("#scrollheight").val($(window).scrollTop());
                        }
                    });

                }
            });

        });
    </script>






}



